[user]
	name = anvidev
	email = andreasgylche@gmail.com

[commit]
	template = ~/.gittemplate

[init]
	defaultBranch = main

[status]
	branch = true
	showStash = true
	showUntrackedFiles = all

[diff]
	context = 3
	renames = copies
	interHunkContext = 10

[color "diff"]
	meta = black bold
	frag = magenta
	context = white
	whitespace = yellow reverse
	old = red

[color "decorator"]
	HEAD = red
	branch = blue
	tag = yellow
	remoteBranch = meganta

[color "branch"]
	current = magenta
	local = default
	remote = yellow
	upstream = green
	plain = blue

[diff-so-fancy]
	markEmptyLines = false

[pager]
	diff = diff-so-fancy | $PAGER

[interactive]
	diffFilter = diff-so-fancy --patch
	singleKey = true

[push]
	autoSetupRemote = true
	default = current
	followTags = true

[pull]
	rebase = true

[rebase]
	autoStash = true
	missingCommitCheck = warn

[log]
	abbrevCommit = true
	graphColors = blue,yellow,cyan,magenta,green,red
